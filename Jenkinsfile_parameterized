 pipeline {
    agent any

    parameters {
        string(name: 'BRANCH_NAME', defaultValue: 'master', description: 'Branch to build')
    }

    tools {
        maven 'maven-3.9.4'
        jdk 'java21'
    }

    environment {
        NEXUS_CREDENTIAL_ID = 'nexus-token'
        SONARQUBE_ENV = 'MySonarQube'
        NEXUS_REPOSITORY = 'maven-snapshot123'
        NEXUS_URL = 'http://3.147.65.25:8082'
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Git Clone') {
            steps {
                git branch: "${params.BRANCH_NAME}", url: 'https://github.com/Sushmitha1-16/spring3-mvc-maven-xml-hello-world-1.git'
            }
        }

        stage('Maven Compile') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv("${SONARQUBE_ENV}") {
                    sh 'mvn sonar:sonar'
                }
            }
        }

        stage('Upload to Nexus') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${NEXUS_CREDENTIAL_ID}", passwordVariable: 'NEXUS_PASS', usernameVariable: 'NEXUS_USER')]) {
                    sh """
                        mvn deploy -DaltDeploymentRepository=${NEXUS_REPOSITORY}::default::${NEXUS_URL}/repository/${NEXUS_REPOSITORY} \
                        -Dnexus.username=${NEXUS_USER} -Dnexus.password=${NEXUS_PASS}
                    """
                }
            }
        }

        stage('Slack Notification') {
            steps {
                slackSend (
                    channel: '#jenkins-status',
                    message: "Build Completed for branch: ${params.BRANCH_NAME}",
                    color: 'good'
                )
            }
        }
    }
}
